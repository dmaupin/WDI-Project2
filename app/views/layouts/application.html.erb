<!DOCTYPE html>
<html>
<head>
  <title>Kanpai1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<br/>
	<div class="b1 beta">BETA, CHROME PREFERRED</div>
	<div class="b1 login">
	
		<% if current_user %>
		<%= current_user.first_name.upcase + " " + current_user.last_name.upcase %> <span class="b1"> | </span><%= link_to "SIGN OUT", logout_path %>
		<% else %>
		<%= link_to "LOGIN", login_path %> | <%= link_to "SIGN UP", signup_path %>
		<% end %>

	</div>

<!-- 	<div class="logo"><img src="<%= asset_path('KANPAI_APP_LOGO_COMP-1a.svg') %>" alt="KANPAI!"></div> -->

<br/>

<%= yield %>

</body>
</html>
