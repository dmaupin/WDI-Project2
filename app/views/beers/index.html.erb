<% if !current_user.nil? %>

<!-- Section 1 - Wish List -->

<br/>

<div class="section-head">
			WISH LIST <div class="links"><%= link_to '+', new_beer_path, class: "links" %></div>
</div>

<hr class="divider-horizontal"/>
<br/>

	<div class="wishlist-new">
			<div class="wishlist-title l1">Beer</div>
			<div class="wishlist-title l1">Brewery</div>
			<div class="wishlist-title l1">Style</div>
			<div class="wishlist-btn-title l1"></div>
			<div class="wishlist-btn-title l1">✖</div>
			<div class="wishlist-btn-title l1">✎</div>
	</div>

<% @beers.each do |beer| %>
	<div class="wishlist-new">
			<div class="wishlist-text b1"><%= beer.name.upcase %></div>
			<div class="wishlist-text l2"><%= beer.brewery %></div>
			<div class="wishlist-text l2"><%= beer.style %></div>
			<div class="wishlist-btn l2"></div>
			<div class="wishlist-btn l2"><%= link_to "✖", beer, method: :delete, data: { confirm: "Are you sure?"}, class: "links" %></div>
			<div class="wishlist-btn l2"><%= link_to "✎", edit_beer_path(beer), class: "links" %></div>
	</div>
<% end %>

<!-- Section 2 - Reviews -->


	<br/><br/>

	<div class="section-head"> REVIEWS </div>

	<hr class="divider-horizontal"/>
		
	<div class="reviewtable">
	<% @beers.each do |beer| %>
		<div class="review-container">
			<div class="review">
				<div class="beers"><%= link_to beer.name.upcase, beer_path(beer), class: "links" %></div>
				<br/>
					<div class="l1">
					Brewery:<br/>
					<span class="b3"><%= beer.brewery  %><br/></span><br/>
					Style:<br/>
					<span class="b3"><%= beer.style %><br/></span><br/>
					ABV%: 
					<span class="b3"><%= beer.ABV %><br/></span><br/>
					Rating: 
					<span class="b3"><%= beer.rating %></span> out of 10<br/><br/>
					Price: $
					<span class="b3"><%= beer.price %><br/></span><br/>
					Taste:
					<span class="b3"><%= beer.taste %></span><br/><br/>
					Color:
					<span class="b3" style="color:<%= beer.color %>" ><%= beer.color %><br/></span><br/>
					<br/>
					</div class="links b3">
					<%= link_to 'REVISE', edit_beer_path(beer), class: "links" %> | <%= link_to "✖", beer, method: :delete, data: { confirm: "Are you sure?"},class: "links" %>
			</div>
		</div>
		<% end %>
	</div>

	<br/>

	<hr class="divider-horizontal"/>
	
	<br/><br/><br/><br/>

	<!-- When no users are logged in -->
		
<% else %>

<br/><br/>	

	<hr class="divider-horizontal"/><br/><br/>

	<div class="showtable"><br/>
		<div class="b5"> Welcome to Kanpai! <br/> A web app for the craft beer enthusiast.
		</div><br/>
		<div class="b4a"><%= link_to "LOGIN", login_path, class: "links" %> | <%= link_to "SIGN UP", signup_path, class: "links" %></div>
		<div class="logo"><img src="<%= asset_path('KANPAI_APP_LOGO_COMP-1a.svg') %>" alt="KANPAI!"></div>

	</div>

<% end %>



